import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class PaymentForm extends JFrame {
    private JTextField cardNumberField;
    private JButton submitButton;
    private JLabel responseLabel;

    public PaymentForm() {
        setTitle("Payment Simulation");
        setSize(350, 200);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);
        setLayout(new FlowLayout());

        cardNumberField = new JTextField(20);  // Increase field width for better usability
        submitButton = new JButton("Submit Payment");
        responseLabel = new JLabel("");

        submitButton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                // This is a simulation: in a real scenario, you would call the backend API here.
                String cardNumber = cardNumberField.getText();
                // Checking if the card number is exactly 16 digits
                if (cardNumber.matches("\\d{16}")) {
                    responseLabel.setText("Payment processed successfully.");
                } else {
                    responseLabel.setText("Invalid card number. Please enter a 16-digit number.");
                }
            }
        });

        add(cardNumberField);
        add(submitButton);
        add(responseLabel);

        setVisible(true);
    }

    public static void main(String[] args) {
        SwingUtilities.invokeLater(new Runnable() {
            public void run() {
                new PaymentForm();
            }
        });
    }
}
